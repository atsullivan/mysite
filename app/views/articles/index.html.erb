<%= render 'navbar' %>
<h1>Articles</h1>

<%= link_to 'New article', new_article_path %>

<% @articles.each do |article| %>
  <div class="card" style="width: 20rem;">
    <img class="card-img-top" src="/assets/work.jpg" alt="Card image cap">
    <div class="card-body">
      <h4 class="card-title">
        <%= article.title %>
      </h4>
      <p class="card-text"><%= article.text %></p>
      <%= link_to 'Read Article', article_path(article) %>
    </div>
  </div>
<% end %>
