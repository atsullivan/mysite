<div class="container">
  <section class="module parallax header2">
    <div class="container reveal">
      <h1>Blog</h1>
    </div>
  </section>

  <section class="cards">
    <div class="flex-container">
      <% @articles.each do |article| %>
        <div class="card" style="width: 20rem;">
          <img class="card-img-top" src="/assets/work.jpg" alt="Card image cap">
          <div class="card-body">
            <h4 class="card-title">
              <%= article.title %>
            </h4>
            <p class="card-text"><%= article.text %></p>
            <%= link_to 'Read Article', article_path(article) %>
          </div>
        </div>
      <% end %>
    </class>
  </section>
</div>

<%= link_to 'New article', new_article_path %>
